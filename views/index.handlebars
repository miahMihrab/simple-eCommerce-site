<title>{{title}}</title>

<div class="container my-5">
    {{#each products}}
    <div class="row mt-3">
        {{#each this}}
        <div class="my-3 col-sm-12 col-md-6 col-lg-4">
            <div class="card" style="width: 18rem;">
                <img src={{this.imagePath}} class="card-img-top" alt="..." class="img-responsive">
                <div class="card-body">
                    <h6 class="card-title">{{this.title}}</h6>
                    <p class="card-text">{{this.description}}</p>

                    <div class="clear-fix">
                        <div class="price">{{this.price}}$</div>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary btn-sm clearfix float-right">Add to
                            cart</a>
                    </div>

                </div>
            </div>
        </div>

        {{/each}}
    </div>
    {{/each}}
</div>